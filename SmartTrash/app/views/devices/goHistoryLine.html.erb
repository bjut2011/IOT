	<script type="text/javascript">  
	var chart; 
	var series;
    var unit;
    var sname;
    var sensorId;
    var queryDate;
    var m;
    var data = [];
	$(document).ready(function() { 
	    var tmpDate = new Date();
	    premonth = tmpDate.getMonth();    //前一月
		month = tmpDate.getMonth() + 1 ;  //当前月
	    
		sensorId=$("#sensorId").val();
        queryDate=$("#queryDate").val();
        m=$("#m").val();
        unit = $("#unit").val();
        sname = "数值";
        
         $("#_pre").html(premonth+"月");
         $("#_cur").html(month+"月");
         $("#_pre").attr("title",premonth+"月份");
         $("#_cur").attr("title",month+"月份");
         $("#_pre").attr("href","/device/goHistoryLine.htm?sensorId="+sensorId+"&name=&unit="+unit+"&queryDate=3&type=1&url=&m="+premonth);
         $("#_cur").attr("href","/device/goHistoryLine.htm?sensorId="+sensorId+"&name=&unit="+unit+"&queryDate=2&type=1&url=&m="+month)
        
    	Highcharts.setOptions({  
        	global: {  
            	useUTC: false  
        	}  
    	});  
    	 
    	chart = new Highcharts.Chart({  
        	chart: {  
            	renderTo: 'container',  
            	type: 'spline',  
            	marginRight: 10,  
            	events: {  
                	load: function() {  
                    series = this.series[0];   
                }  
            }  
        },  
        title: {  
            text: ''  
        },  
        xAxis: {  
            type: 'datetime',  
            tickPixelInterval: 150,
        },  
        yAxis: {  
            title: {  
                text: '历史曲线'  
            },  
            plotLines: [{  
                value: 0,  
                width: 1,  
                color: '#808080'  
            }]  
        },  
        tooltip: {  
            formatter: function() {  
                    return  Highcharts.dateFormat('%Y-%m-%d %H:%M:%S', this.x) +'<br/>'+  
                    '<b>'+ this.series.name +': </b>'+  
                    Highcharts.numberFormat(this.y, 2)+' ';  
            }  
        },  
        legend: {  
            enabled: false  
        },  
        exporting: {  
            enabled: true  
        },  
        series: [{  
        	turboThreshold: 99999999,
            name: ''+sname,  
            data: (function() {  
                // generate an array of random data  
                $.ajax({
   					type:"post",
   					async: false,
  					url:"/device/querySensorHistoryDatas.htm?sensorId="+sensorId+"&queryDate="+queryDate+"&m="+m,
   					success:function(sensorData){
   						var jsonObj = eval('('+sensorData+')');
   						var sensorsObj=eval(jsonObj.dataList);  
   						var flag = jsonObj.flag;
   						var sensorType = $("#sensorType").val();
   						if(flag == "00"){
   							var len = sensorsObj.length;
   							for(var i=0;i<len;i++){  
	   							var val = sensorsObj[i].t_val; 
	   							if('2' == sensorType || '' == sensorType){
	   				   				val = sensorsObj[i].t_switcher;
								}
								
	   							var updateTime = sensorsObj[i].t_addTime; 
	   							updateTime = updateTime.replace(/-/g,"/");
								var date = new Date(updateTime);
								 data.push({  
	                        		x: date,  
	                       			y: Number(val)  //初始数据
	                    		});  
                    		}
   						}
					}
                   });
                return data;  
            })()  
        }]  
    });  
});  
</script>  
	
